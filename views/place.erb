<div class="screen">

  <div id="map-container"></div>

  <div class="overlay">
      <a href="" id="add_req">
          <img class="add-btn" style="width: 95px; height: 29px; margin-bottom: 20px; margin-left: 50px;" src="/img/web_logo5.png">
      </a>
  </div>
</div>

<div class="modal fade" id="modal-window" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">いまの状況は？</h4>
      </div>
      <div class="modal-body">

        <div class="form-group">
          <label for="message-text" class="control-label">どこに行きますか？</label>
          <select class="selectpicker">
            <option value="0">選択してください</option>
            <%
            @places.map do |row|
            %>
            <option value="<%= row[:open_id] %>"><%= row[:name] %></option>
            <%
            end
            %>
          </select>
        </div>

        <br>
        <div class="form-group">
          <p class="control-label"><b>お困りですか？</b></p>
          <div class="col-sm-10">
            <input type="checkbox" name="help-switch" checked data-size="small" id="help">
          </div>
        </div>
      </div>

      <br />
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="register_state">Save changes</button>
      </div>
    </div>
  </div>
</div>


<div class="modal fade" id="user-info" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel"><span id="user-name"></span>にメッセージを送信する</h4>
      </div>
      <div class="modal-body">

        <div class="form-group">
          <p class="control-label"><b>本文</b></p>
          <div class="col-sm-10">
            <textarea id="message" class="form-control" placeholder="メッセージ"></textarea>
            <input type="hidden" id="to-id" value="">
          </div>
        </div>
      </div>

      <br />
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="send_message">Save changes</button>
      </div>
    </div>
  </div>
</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="//maps.google.com/maps/api/js?sensor=false" type="text/javascript"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/bootstrap-switch.min.js"></script>
<script src="/js/bootstrap-select.min.js"></script>
<script type="text/javascript" src="/js/map.js"></script>
